<div class="card">
    <div class="card-header flex-between">
        <h3>Konfirmasi Pembayaran</h3>
        <div class="filter-tabs">
            <a href="/payments?status=pending"
                class="tab <%= statusFilter === 'pending' ? 'active' : '' %>">Menunggu</a>
            <a href="/payments?status=approved"
                class="tab <%= statusFilter === 'approved' ? 'active' : '' %>">Diterima</a>
            <a href="/payments?status=rejected"
                class="tab <%= statusFilter === 'rejected' ? 'active' : '' %>">Ditolak</a>
        </div>
    </div>
    <div class="card-body">
        <table class="table">
            <thead>
                <tr>
                    <th>Warga</th>
                    <th>Bulan Tagihan</th>
                    <th>Bukti</th>
                    <th>Tgl Bayar</th>
                    <th>Tgl Kirim</th>
                    <th>Aksi</th>
                </tr>
            </thead>
            <tbody>
                <% payments.forEach(p=> { %>
                    <tr>
                        <td>
                            <div class="user-cell">
                                <strong>
                                    <%= p.full_name %>
                                </strong><br>
                                <small class="text-muted">
                                    <%= p.house_number %>
                                </small>
                            </div>
                        </td>
                        <td>
                            <%= p.month_paid_for %>
                        </td>
                        <td>
                            <a href="<%= p.proof_image.startsWith('/') ? p.proof_image : '/uploads/' + p.proof_image %>"
                                target="_blank" class="btn-link">Lihat Bukti</a>
                        </td>
                        <td>
                            <%= p.payment_date ? new Date(p.payment_date).toLocaleDateString('id-ID') : '-' %>
                        </td>
                        <td>
                            <%= new Date(p.date_submitted).toLocaleDateString('id-ID') %>
                        </td>
                        <td>
                            <% if (p.status==='pending' && user.role==='admin' ) { %>
                                <button class="btn-sm btn-success"
                                    onclick="openConfirmModal('<%= p.id %>', 'approved')">Terima</button>
                                <button class="btn-sm btn-danger"
                                    onclick="openConfirmModal('<%= p.id %>', 'rejected')">Tolak</button>
                                <% } else { %>
                                    <span class="badge badge-<%= p.status %>">
                                        <%= p.status %>
                                    </span>
                                    <% } %>
                        </td>
                    </tr>
                    <% }) %>
            </tbody>
        </table>
    </div>
</div>

<!-- Confirmation Modal -->
<div id="confirmModal" class="modal">
    <div class="modal-content">
        <span class="close" onclick="closeModal()">&times;</span>
        <h3 id="modalTitle">Konfirmasi</h3>
        <form action="/payments/update" method="POST">
            <input type="hidden" name="id" id="paymentId">
            <input type="hidden" name="status" id="paymentStatus">

            <div class="form-group">
                <label>Catatan (Opsional)</label>
                <textarea name="admin_note" class="form-control" rows="3"></textarea>
            </div>

            <button type="submit" class="btn-primary w-100">Simpan Status</button>
        </form>
    </div>
</div>

<script>
    function openConfirmModal(id, status) {
        document.getElementById('paymentId').value = id;
        document.getElementById('paymentStatus').value = status;
        document.getElementById('modalTitle').innerText = status === 'approved' ? 'Terima Pembayaran' : 'Tolak Pembayaran';
        document.getElementById('confirmModal').style.display = 'block';
    }

    function closeModal() {
        document.getElementById('confirmModal').style.display = 'none';
    }
</script>

<style>
    .flex-between {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .filter-tabs {
        display: flex;
        gap: 0.5rem;
        background: #f1f5f9;
        padding: 0.25rem;
        border-radius: 0.5rem;
    }

    .tab {
        padding: 0.5rem 1rem;
        border-radius: 0.25rem;
        text-decoration: none;
        color: #64748b;
        font-size: 0.9rem;
    }

    .tab.active {
        background: white;
        color: #764ba2;
        box-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
        font-weight: 600;
    }

    .btn-link {
        color: #667eea;
        text-decoration: underline;
    }

    .btn-sm {
        padding: 0.25rem 0.5rem;
        border-radius: 0.25rem;
        cursor: pointer;
        border: none;
        color: white;
        margin-right: 0.25rem;
    }

    .btn-success {
        background: #48bb78;
    }

    .btn-danger {
        background: #f56565;
    }

    .text-muted {
        color: #aaa;
        font-size: 0.85em;
    }
</style>