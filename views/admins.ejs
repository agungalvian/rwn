<div class="admins-page">
    <div class="actions-bar">
        <h3>Daftar Administrator</h3>
        <% if (user.role==='admin' ) { %>
            <button class="btn-primary" onclick="document.getElementById('addAdminModal').style.display='block'">
                <i class="fas fa-user-shield"></i> Tambah Admin
            </button>
            <% } %>
    </div>

    <% if (typeof error !=='undefined' || (typeof req !=='undefined' && req.query.error)) { %>
        <div class="alert alert-danger">
            <%= error || req.query.error %>
        </div>
        <% } %>

            <div class="table-container">
                <table>
                    <thead>
                        <tr>
                            <th>Username</th>
                            <th>Nama Lengkap</th>
                            <th>Role</th>
                            <th>Aksi</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% admins.forEach(admin=> { %>
                            <tr>
                                <td>
                                    <%= admin.username %>
                                </td>
                                <td>
                                    <%= admin.full_name %>
                                </td>
                                <td>
                                    <span class="badge badge-<%= admin.role %>">
                                        <%= admin.role==='admin' ? 'Administrator' : 'View Only' %>
                                    </span>
                                </td>
                                <td>
                                    <% if (admin.id !==user.id && user.role==='admin' ) { %>
                                        <a href="/admins/delete/<%= admin.id %>" class="btn-danger-sm"
                                            onclick="return confirm('Yakin ingin menghapus admin ini?')">
                                            <i class="fas fa-trash"></i> Hapus
                                        </a>
                                        <% } else if (admin.id===user.id) { %>
                                            <span class="badge badge-info">Anda</span>
                                            <% } else { %>
                                                <span class="text-muted">-</span>
                                                <% } %>
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
            </div>
</div>

<% if (user.role==='admin' ) { %>
    <!-- Add Admin Modal -->
    <div id="addAdminModal" class="modal">
        <div class="modal-content">
            <span class="close" onclick="document.getElementById('addAdminModal').style.display='none'">&times;</span>
            <h3>Tambah Admin Baru</h3>
            <form action="/admins/add" method="POST">
                <div class="form-group">
                    <label>Nama Lengkap</label>
                    <input type="text" name="full_name" required class="form-control">
                </div>
                <div class="form-group">
                    <label>Username</label>
                    <input type="text" name="username" required class="form-control">
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input type="password" name="password" required class="form-control">
                </div>
                <div class="form-group">
                    <label>Role</label>
                    <select name="role" class="form-control" required>
                        <option value="admin">Administrator (Akses Penuh)</option>
                        <option value="viewer">View Only (Hanya Lihat)</option>
                    </select>
                </div>
                <button type="submit" class="btn-primary w-100">Simpan Admin</button>
            </form>
        </div>
    </div>
    <% } %>

        <style>
            .actions-bar {
                display: flex;
                justify-content: space-between;
                align-items: center;
                margin-bottom: 1.5rem;
            }

            .table-container {
                background: white;
                padding: 1.5rem;
                border-radius: 1rem;
                box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
            }

            table {
                width: 100%;
                border-collapse: collapse;
            }

            th,
            td {
                padding: 1rem;
                text-align: left;
                border-bottom: 1px solid #eee;
            }

            .btn-danger-sm {
                color: #f56565;
                text-decoration: none;
                font-size: 0.9rem;
            }

            .modal {
                display: none;
                position: fixed;
                z-index: 100;
                left: 0;
                top: 0;
                width: 100%;
                height: 100%;
                background-color: rgba(0, 0, 0, 0.4);
            }

            .modal-content {
                background-color: #fefefe;
                margin: 10% auto;
                padding: 20px;
                width: 400px;
                border-radius: 1rem;
            }

            .close {
                float: right;
                font-size: 28px;
                cursor: pointer;
            }
        </style>